{
  "parser": "babel-eslint",
  "env": {
    "node": true
  },
  "rules": {
    "strict": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "eol-last": 1,
    // enforce newline at the end of file, with no multiple empty lines
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "angular/window-service": 0,
    "indent": [
      2, 4
    ],
    "angular/controller-name": [2,"/[A-Z].*Ctrl/"],
    "angular/controller-as-vm": 0,
    "max-len": [2, 120, 2, {
      "ignoreUrls": true,
      "ignoreComments": false
    }],
    "spaced-comment": 0
  },
  "globals": {
    "cordova": true,
    "ionic": true
  },
  "extends": [
    "angular",
    "airbnb/base"
  ]
}
